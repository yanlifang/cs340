@model CS340_Group_Project.Models.IngredientIndexViewModel

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <p>Name</p>
            </div>
            <div class="col-md-8">
                <p>Description</p>
            </div>
        </div>
        <hr />
        @foreach (var ingredient in Model.Ingredients)
        {
            <div class="row">
                <div class="col-md-4">
                    @ingredient.Name
                </div>
                <div class="col-md-8">
                    @ingredient.Description
                </div>
            </div>
        }
    </div>

<div>
    @Html.ActionLink("Add", "AddIngredient")
</div>